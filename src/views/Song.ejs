<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../components/head'); %>
</head>

<body class="container">
    <header>
        <%- include('../components/header'); %>
    </header>
    <main>
        <div class="content">
            <h2>
                <%-details.title%>
            </h2>
            <div class="d-flex justify-content-center">
                <video id="song" width="100%" preload autoplay controls>
                    <source src="<%-video.url%>" type='video/mp4'>
                </video>
            </div>
        </div>
        <div class="jumbotron">
            <ul>
                <%-songs%>
            </ul>
        </div>

        <div id="score" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Score:</h5>
                    </div>
                    <div class="modal-body">
                        <div class="d-flex justify-content-center">
                            <h1 id='score-text'>0</h1>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">OK</button>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer>
        <%- include('../components/footer'); %>
    </footer>

    <script>
        (function ($) {
            $.fn.counter = function (numberFrom, numberTo, time) {
                const $this = $(this),
                    delta = numberTo - numberFrom,
                    deltaPositive = delta > 0 ? 1 : 0,
                    changeTime = 10;

                let currentNumber = numberFrom,
                    value = delta * changeTime / time;
                var interval1;
                const changeNumber = () => {
                    currentNumber += value;
                    //checks if currentNumber reached numberTo
                    (deltaPositive && currentNumber >= numberTo) || (!deltaPositive && currentNumber <= numberTo) ? currentNumber = numberTo : currentNumber;
                    this.text(parseInt(currentNumber));
                    currentNumber == numberTo ? clearInterval(interval1) : currentNumber;
                }

                interval1 = setInterval(changeNumber, changeTime);
            }
        }(jQuery));

        $(document).ready(function () {
            $('#song').on('ended', function () {
                $('#score').modal()
                const total = 900 + Math.round(Math.random() * 100)
                $('#score-text').counter(0, total, 2000)
            });
        })
    </script>
</body>

</html>